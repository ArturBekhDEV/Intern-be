generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  USER
}

model User {
  id    String     @id @default(uuid())
  email String  @unique

  firstName  String @map("first_name")
  lastName  String? @map("last_name")
  
  password String
  role  Roles
  
  @@map("users")
}