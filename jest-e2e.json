{
  "moduleFileExtensions": ["js", "json", "ts"],
  "roots": [
    "<rootDir>/test"
  ],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@core/(.*)$": "<rootDir>/src/core/$1"
  },
  "collectCoverage": true
}
